<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.sslab.samplegroupapplication.samples.CustomTextViewActivity"
    android:columnCount="2">

    <TextView
        android:text="CustomTextNumber : "/>
    <com.example.sslab.samplegroupapplication.widget.TextNumber
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20000"
        android:id="@+id/deprecationNumber"
        />

    <TextView
        android:text="CustomTextNumberValue : "/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/deprecationNumberValue"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10000"
        android:layout_columnSpan="2"
        />


    <com.example.sslab.samplegroupapplication.widget.EditNumber
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_columnSpan="2"
        android:gravity="right"
        android:id="@+id/editNumber" />
</GridLayout>

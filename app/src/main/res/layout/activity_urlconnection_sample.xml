<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_urlconnection_sample"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.sslab.samplegroupapplication.samples.URLConnectionSampleActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <Button
            android:id="@+id/requestURLConnection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Call URLConnection"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"></Button>

        <Button
            android:id="@+id/requestData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Call requestData"
            android:layout_toRightOf="@id/requestURLConnection"/>


        <TextView android:id="@+id/requestURLConnectionResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/requestURLConnection"
            android:text="URLconnection"/>

        <TextView android:id="@+id/requestDataResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/requestURLConnectionResult"
            android:text="requestDataResult"/>

    </LinearLayout>
</ScrollView>

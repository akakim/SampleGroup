<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="750dp"
    android:layout_height="405dp"
    android:orientation="vertical"
    android:weightSum="1"
    android:elevation="50dp">

    <View
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/popup_form"></View>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=""
                android:textColor="#ffffff"
                android:textSize="19sp"
                android:paddingLeft="23dp"
                android:gravity="center_vertical"
                android:id="@+id/popupTitle"
                android:layout_alignParentTop="true">
            </TextView>

            <Button
                android:id="@+id/popupCloseBtn"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/btn_alert_close"
                android:layout_alignParentRight="true"
                android:layout_marginTop="15dp"
                android:layout_marginRight="21dp"
                android:layout_marginBottom="15dp"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1월 할인 공지"
                android:textColor="#243770"
                android:textSize="16sp"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="7.5dp"
                android:layout_marginBottom="23dp"
                android:id="@+id/title"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true">
            </TextView>


            <ScrollView
                android:layout_width="710dp"
                android:layout_height="710dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="#cacaca"
                android:layout_below="@id/title"
                android:layout_centerHorizontal="true">
                <LinearLayout
                    android:layout_width="710dp"
                    android:layout_height="710dp">
                    <TextView
                        android:layout_width="708dp"
                        android:layout_height="227dp"
                        android:text="최대 1,000 자까지 허용 "
                        android:textColor="#565656"
                        android:textSize="15sp"
                        android:layout_marginTop="1dp"
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="1dp"
                        android:id="@+id/popupMsg"
                        android:background="#ffffff">
                    </TextView>
                </LinearLayout>

            </ScrollView>

            <Button
                android:id="@+id/popupConfirmBtn"
                android:layout_width="79.5dp"
                android:layout_height="33dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp"
                android:text="확인"
                android:textSize="14sp"
                android:textColor="#ffffff"
                android:elevation="50dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10.5dp">
            </Button>

        </RelativeLayout>
    </LinearLayout>


</FrameLayout>